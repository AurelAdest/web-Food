    </div>
</div>

<div class="container-fluid table"  style="background-color:#acc3d6 ;" >
  <div class="container text-center">
    <h4 class="display-6" style="margin-top: 70px;">User</h4>
    <div class="table-wrapper">
      <table class="demo-table" >
        
        <thead>
          <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Delete</th>
            <th>Update</th>
          </tr>
          <% for( const a of loginuser ) { %> 

            <tr>
              <td> <%= a.username %> </td>
              <td> <%= a.password %> </td>
              
              <td><button style="text-decoration:none ;"><a href="/delete/<%= a.id %>" style="margin: 0px; font-size:15px;">hapus</a></button></td>
              <td><button style="text-decoration:none ;"><a href="/editadmin/<%= a.id %>" style="margin: 0px; font-size:15px;">edit</a></button></td>
            </tr>
  
            <% } %>
        </thead>
      </table>
    
      
  </div>
</div>
</div>
</body>
</html>